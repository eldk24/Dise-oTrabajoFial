<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="dashboard-body">
  <div class="dashboard-container">
    <h1>Bienvenido, <%= user.username %> ðŸ‘‹</h1>

    <form class="product-form" method="POST" action="/add-product">
      <input type="text" name="name" placeholder="Nombre del producto" required>
      <input type="number" name="price" step="0.01" placeholder="Precio" required>
      <input type="text" name="image" placeholder="URL de imagen" required>
      <button>Agregar producto</button>
    </form>

    <h2>CatÃ¡logo</h2>
    <div class="product-grid">
      <% products.forEach(p => { %>
        <div class="product-card">
          <img src="<%= p.image %>" alt="Producto">
          <h3><%= p.name %></h3>
          <p>S/. <%= p.price %></p>
          <form method="POST" action="/delete-product/<%= p.id %>">
            <button>Eliminar</button>
          </form>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
